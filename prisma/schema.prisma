generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Posts {
  id String @id @map("_id") @db.ObjectId @default(uuid())

  thumbnail String @db.String
  post_id   String @default(cuid())
  title     String
  contents  String @db.String
  
  createdAt DateTime @default(now())
}
