---
const items = [
  "devicon-typescript-plain",
  "devicon-javascript-plain",
  "devicon-bun-plain",
  "devicon-docker-plain",
  "devicon-figma-plain",
  "devicon-python-plain",
  "devicon-vuejs-plain",
  "devicon-react-original",
  "devicon-svelte-plain",
  "devicon-nextjs-plain",
  "devicon-nuxtjs-plain",
  "devicon-express-original",
  "devicon-fastify-plain",
];

const duplicatedItems = [...items, ...items];
---

<div class="tech-marquee-wrapper w-full overflow-hidden border-y-2 border-black/20 bg-(--paper-cream) py-4 -rotate-2">
  <div class="tech-marquee inline-flex animate-marquee">
    {duplicatedItems.map((icon) => (
      <div class="flex items-center justify-center shrink-0 w-24 mr-12">
        <i class={`${icon} ink-text text-4xl sm:text-5xl`}></i>
      </div>
    ))}
  </div>
</div>

<style>
  .tech-marquee-wrapper:hover .tech-marquee {
    animation-play-state: paused;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .animate-marquee {
    animation: marquee 16s linear infinite;
  }

  @media (max-width: 640px) {
    .tech-marquee > div {
      width: 4rem;
      margin-right: 2rem;
    }
  }
</style>