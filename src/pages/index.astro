---
import { Icon } from "astro-icon/components";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects")
const latestPost = (await getCollection("posts")).sort((a: any, b: any) => b.data.publishedDate - a.data.publishedDate).at(0)

---

<Layout title="Wint Khant Lin's portfolio" description="Hello! I'm a 16-year-old college student from Myanmar, passionate about coding and designing with ❤️.">
	<div class="container">
		<div class="h-[60vh] flex items-center justify-center">
			<div class="text-center space-y-4">
				<div class="mx-auto pb-5">
					<a href={`/posts/${latestPost?.slug}`} class="bg-purple-500/10 px-4 py-1 rounded-full border border-purple-500 flex items-center gap-2 w-fit mx-auto text-sm">
						{latestPost?.data.title}
						<Icon name={"mdi:arrow-right"} />
					</a>
				</div>
				<h1 class="text-5xl font-bold">Wint Khant Lin</h1>
				<h2 class="text-2xl max-w-3xl tracking-wide">Hello! I'm a 16-year-old college student from Myanmar, passionate about coding and designing with ❤️.</h2>
				<div class="flex items-center justify-center gap-5 flex-warp">
					<a href="https://github.com/happer64bit/" class="border flex items-center px-4 py-1 rounded-full gap-3 bg-green-500/10 border-green-500" target="_blank">
						<Icon name={"mdi:github"}/>
						GitHub
					</a>
					<a href="mailto:happer64bit@gmail.com" class="border flex items-center px-4 py-1 rounded-full gap-3 bg-blue-500/10 border-blue-500" target="_blank">
						<Icon name={"mdi:email"}/>
						Email
					</a>
					<a href="/rss.xml" class="border flex items-center px-4 py-1 rounded-full gap-3 bg-yellow-500/10 border-yellow-500" target="_blank">
						<Icon name={"mdi:rss"}/>
						RSS
					</a>
				</div>
			</div>
		</div>
		<section class="py-10">
			<div class="text-center py-10">
				<h1 class="text-4xl font-bold">Love Doing These</h1>
			</div>
			<div class="grid md:grid-cols-2 gap-5 grid-cols-1">
				<div class="p-6 rounded-lg bg-slate-800/5 space-y-5">
					<h1 class="text-4xl p-1 bg-white/5 w-[55px] h-[55px] flex items-center justify-center rounded-lg shadow-sm">🔮</h1>
					<div class="space-y-2">
						<h2 class="text-2xl font-semibold">Full-Stack Development</h2>
						<p>I love creating websites which not only look good but also powerful</p>
					</div>
				</div>
				<div class="p-6 rounded-lg bg-slate-800/5 space-y-5">
					<h1 class="text-4xl p-1 bg-white/5 w-[55px] h-[55px] flex items-center justify-center rounded-lg shadow-sm">🎨</h1>
					<div class="space-y-2">
						<h2 class="text-2xl font-semibold">UI/UX Design</h2>
						<p>User interface and User experience designing are also my favourite</p>
					</div>
				</div>
				<div class="p-6 rounded-lg bg-slate-800/5 space-y-5">
					<h1 class="text-4xl p-1 bg-white/5 w-[55px] h-[55px] flex items-center justify-center rounded-lg shadow-sm">🎮</h1>
					<div class="space-y-2">
						<h2 class="text-2xl font-semibold">Playing Video Games</h2>
						<p>Playing video games are that only way to make and find happiness</p>
					</div>
				</div>
				<div class="p-6 rounded-lg bg-slate-800/5 space-y-5">
					<h1 class="text-4xl p-1 bg-white/5 w-[55px] h-[55px] flex items-center justify-center rounded-lg shadow-sm">📱</h1>
					<div class="space-y-2">
						<h2 class="text-2xl font-semibold">Software Development</h2>
						<p>I love creating software for Android</p>
					</div>
				</div>
			</div>
		</section>
		<section class="py-10">
			<div class="text-center py-10">
				<h1 class="text-4xl font-bold">Recent Projects</h1>
			</div>
			<div class="grid md:grid-cols-2 gap-5 grid-cols-1">
				{projects.slice(0, 4).sort((a: any, b: any) => b.data.publishedDate - a.data.publishedDate).map((project) => (
					<a href={`/projects/${project.slug}`} class="relative">
						<div class="p-6 rounded-lg bg-slate-800/5 space-y-5 border border-slate-800/50 shadow-sm min-h-40 hover:shadow-lg hover:shadow-blue-900 transform duration-200">
							<h1 class="text-2xl font-semibold">{project.data.title}</h1>
							<p>{project.data.summery}</p>
						</div>
					</a>
				))}
			</div>
		</section>
	</div>
</Layout>