generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum Language {
  English
  Burmese
}

model Articles {
  id            Int      @id @default(autoincrement())
  pathname      String   @unique
  thumbnail     String
  title         String
  shortContents String
  contents      String   @db.Text
  updatedAt     DateTime @updatedAt
  createdAt     DateTime @default(now())
}

model Events {
  id           Int      @id @default(autoincrement())
  title        String
  description  String
  redirectLink String
  startedDate  DateTime @default(now())
  endDate      DateTime
  enabled      Boolean
  createdAt    DateTime @default(now())
}

model Contacts {
  id        Int      @id @default(autoincrement())
  email     String
  message   String
  createdAt DateTime @default(now())
}

model HireMessages {
  id        String   @id @default(uuid())
  email     String
  message   String
  createdAt DateTime @default(now())
}
